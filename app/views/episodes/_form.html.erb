    <%= form.label :fin_cuarentena %>
    <%= form.date_select :fin_cuarentena, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :origen_contagio, "Origen" %>
    <%= form.select(:origen_contagio, [['Laboral'], ['No Laboral'], ['Indeterminado']]) %>
  </div>

  <div class="field">
      <%= form.label(:abierto, 'Cerrar episodio') %>
