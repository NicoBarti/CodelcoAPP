

<%= render 'episodio_actual' %>

<h5>Contacos</h5>
<% if @episode.contactos.blank? %>
<p>Sin contactos</p>
<% else %>
<%= render 'contactos/lista' %>
<% end %>

<h5>Síntomas al ingreso</h5>
<% if @sintoma == nil or @episode.presentacion == "Asintomatico" %>
<p>Caso asintimático al momento de la notificación</p>
<%else %>
<%= render 'sintomas/sinto'%>
<% end %>

<h5>Último seguimiento</h5>
<% if @Useguimiento == nil %>
<p>Sin seguimientos aún</p>
<% else %>
<%= render 'seguimientos/ultimo' %>
<% end %>

<%= link_to 'Volver', trabajador_path(@trabajador) %>
