<p id="notice"><%= notice %></p>

<h2>Datos del trabajador</h2>
<%= render 'trabajadors/trabajadoractual' %>

<% if @episode == nil %>
<h2>Crear nuevo episodio</h2>
<%= render 'episodes/epi' %>

<% else %>

<h2>Episodio actual</h2>
<%= render "episodes/show" %>

<%= button_to "Modificar Episodio", edit_episode_path(@episode), method: 'get' %>
<%= button_to "Detalles Episodio", episode_path(@episode), method: 'get' %>

<br>

<h2>Acciones de trababilidad, testeo y seguimiento</h2>

<% if @episode.cambioSeguimiento == 'Contacto' %>
<% else %>
<%= button_to "Agregar contactos (trazabilidad)", new_episode_contacto_path(@episode), method: 'get' %>
<% end %>

<%= button_to "Seguimiento del trabajador", new_episode_seguimiento_path(@episode), method: 'get' %>

<%= button_to "Ingreso resultados de testeo", new_episode_test_path(@episode), method: 'get' %>


<% end %>

<br>
<%= link_to 'Listado de trabajadores', trabajadors_path %>
